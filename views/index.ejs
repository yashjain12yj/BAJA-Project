<!DOCTYPE html>
<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">

        <title><%= title %></title>

        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
      	<h1 class="title"><%= title %></h1>
        
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Driver Name</th>
                    <th scope="col">Speed</th>
                    <th scope="col">RPM</th>
                    <th scope="col">Steering Angle</th>
                    <th scope="col">Tilt Angle</th>
                    <th scope="col">Temperature</th>
                    <th scope="col">Current</th>
                    <th scope="col">Voltage</th>
                    <th scope="col">Lattitude</th>
                    <th scope="col">Longititude</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="driverName">-</td>
                    <td id="speed">-</td>
                    <td id="rpm">-</td>
                    <td id="steeringAngle">-</td>
                    <td id="tiltAngle">-</td>
                    <td id="temp">-</td>
                    <td id="current">-</td>
                    <td id="voltage">-</td>
                    <td id="lat">-</td>
                    <td id="long">-</td>
                </tr>
            </tbody>
        </table>
        <hr>
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-5">
                    <div id="map-container" class="z-depth-1 wow fadeIn" style="height: 300px"></div>
                </div>
            </div>
        </div>

        <!-- Scoket.io CDN -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.1/socket.io.js"></script>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>

        <!--Google Maps-->
        <script src="https://maps.google.com/maps/api/js?key=AIzaSyB-3FFhnFL1I8NQJPjkU6BTZDHH-sTss18"></script>

        <script>
            // console.log(lat)
            var var_marker;
            var lat, long, data1;
            if (typeof data1 !== 'undefined' || data1 === null) {
                lat = data1.lat; //22.7248170;
                long = data1.long; //75.8243170;    
            }  
            console.log("Longititude", long, lat)
            function init_map() {
                var var_location = new google.maps.LatLng(lat, long);

                var var_mapoptions = {
                    center: var_location,
                    zoom: 18
                };
                
                var_marker = new google.maps.Marker({
                    position: var_location,
                    map: var_map,
                    animation: google.maps.Animation.DROP,
                    title: "Current Location",
                });

                var_marker.addListener('click', toggleBounce);

                var var_map = new google.maps.Map(document.getElementById("map-container"),
                    var_mapoptions);

                var_marker.setMap(var_map);
            }
            function toggleBounce() {
                if (var_marker.getAnimation() !== null) {
                    var_marker.setAnimation(null);
                } else {
                    var_marker.setAnimation(google.maps.Animation.BOUNCE);
                }
            }

        </script>


        <script type="text/javascript">
            var voltage, current, speed, steeringAngle, tiltAngle, rpm, temp, driverName;
            $(function () {
                var socket = io();
                socket.on('data', function(data){
                    data1 = data
                    lat = data.lat
                    init_map()
                    //google.maps.event.addDomListener(window, 'load', init_map);
                    if(lat){
                        $('#lat').text(lat);    
                    }
                    long = data.long
                    if (long) {
                       $('#long').text(long);   
                    }
                    
                    voltage = data.voltage
                    if (voltage) {
                        $('#voltage').text(voltage);  
                    }

                    current = data.current
                    if (current) {
                        $('#current').text(current);  
                    }

                    driverName = data.driverName
                    if (driverName) {
                        $('#driverName').text(driverName);  
                    }

                    speed = data.speed
                    if (speed) {
                        $('#speed').text(speed);  
                    }

                    steeringAngle = data.steeringAngle
                    if (steeringAngle) {
                        $('#steeringAngle').text(steeringAngle);
                    }

                    tiltAngle = data.tiltAngle
                    if (tiltAngle) {
                        $('#tiltAngle').text(tiltAngle);
                    }

                    rpm = data.rpm
                    if (rpm) {
                        $('#rpm').text(rpm);
                    }

                    temp = data.temp 
                    if (temp) {
                        $('#temp').text(temp);
                    }
                });

            });
        </script>
    </body>
</html>
